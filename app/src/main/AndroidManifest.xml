        android:theme="@style/Theme.MedicMAD2"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".view.SuccessActivity"
            android:exported="false"
            android:label="@string/title_activity_success"
            android:theme="@style/Theme.MedicMAD2">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
